{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "typeRoots": ["./@types", "./node_modules/@types"],
  "include": ["src/**/*.ts", "src/app.ts", "src/view/**/*.ejs"],
  "exclude": ["node_modules"]
}
